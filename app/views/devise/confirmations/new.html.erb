<% provide(:title, 'Confirmation') %>
<div class='userform well'>
  <div class='userform'>
    <h1 class='hidden-xs'>Resend Confirmation Instructions</h1>
    <center><h4 class='visible-xs'>Resend Confirmation Instructions</h4></center>

    <%= bootstrap_form_for(resource,
                           :as => resource_name,
                           :url => confirmation_path(resource_name),
                           :html => { :method => :post },
                           style: :horizontal,
                           left: 'col-sm-4',
                           right: 'col-sm-8') do |f| %>

      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.primary "Resend confirmation instructions" %>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

