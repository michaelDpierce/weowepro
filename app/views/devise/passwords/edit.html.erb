<% provide(:title, 'Password Reset') %>
<div class='userform well'>
  <div class='userform'>
    <h1 class='hidden-xs'>Change your password</h1>
    <center><h4 class='visible-xs'>Change your password</h4></center>

    <%= bootstrap_form_for(resource,
                           :as => resource_name,
                           :url => password_path(resource_name),
                           :html => { :method => :put },
                           style: :horizontal,
                           left: 'col-sm-4',
                           right: 'col-sm-8') do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, :autofocus => true %>

      <%= f.password_field :password_confirmation %>

      <%= f.primary "Change my password" %>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


