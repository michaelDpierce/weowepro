<% provide(:title, 'Forgot Your Password?') %>
<div class='userform well'>
  <div class='userform'>
    <h1 class='hidden-xs'>Forgot Your Password?</h1>
    <center><h4 class='visible-xs'>Forgot Your Password?</h4></center>

    <%= bootstrap_form_for(resource,
                           :as => resource_name,
                           :url => password_path(resource_name),
                           :html => { :method => :post },
                           style: :horizontal,
                           left: 'col-sm-4',
                           right: 'col-sm-8') do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.primary 'Send me reset password instructions' %>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

