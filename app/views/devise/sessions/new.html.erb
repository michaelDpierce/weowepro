<% provide(:title, 'Sign In') %>
<div class='userform well'>
  <div class='userform'>
    <h1 class='hidden-xs'>We Owe Pro</h1>
    <center><h4 class='visible-xs'>We Owe Pro</h4></center>

    <%= bootstrap_form_for(resource, :as => resource_name,
                           :url => session_path(resource_name)) do |f| %>
      <%= f.email_field :email, :autofocus => true %>
      <%= f.password_field :password %>

      <%= f.primary 'Login' %>
    <% end %>

   <%= render "devise/shared/links" %>
    <div> Don't have an account? <%= link_to(' Sign Up', new_user_path) %></div>
  </div>
</div>
</div>
