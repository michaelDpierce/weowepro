<% provide(:title, 'Locked Out') %>
<div class='userform well'>
  <div class='userform'>
    <h1 class='hidden-xs'>Resend unlock instructions</h1>
    <center><h4 class='visible-xs'>Resend unlock instructions</h4></center>
    <%= bootstrap_form_for(resource, :as => resource_name,
                           :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %></div>
      <%= f.submit 'Resend unlock instructions' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
 </div>
</div>


