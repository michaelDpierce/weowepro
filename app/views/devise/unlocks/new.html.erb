<% provide(:title, 'Locked Out') %>
<br><br><br>

<div class='row well'>
  <div class='userform'>
    <center>
      <h1> Resend unlock instructions </h1>
    </center>

    <%= bootstrap_form_for(resource, :as => resource_name,
                           :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, :autofocus => true %></div>


      <%= f.submit 'Resend unlock instructions' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
