<%= column_chart [["Sales Forms", @sales.count],
                  ["Service Forms", @service.count],
                  ["Completed Forms", @completed.count]],
                  colors: ['#3071A9'],
                  library: {title: 'Forms Submitted',
                            hAxis: {title: "Category"},
                            vAxis: {title: "Number of Forms"}} %>

<%= column_chart [["Sales Forms", @sales.sum(:dealer_total_value)],
                  ["Service Forms", @service.sum(:dealer_total_value)],
                  ["Completed Forms", @completed.sum(:dealer_total_value)]],
                  colors: ['#5CB85C'],
                  library: {title: 'Dealer Total',
                            hAxis: {title: "Category"},
                            vAxis: {title: "Total Dollars ($)"}} %>

<%= column_chart [["Sales Forms", @sales.sum(:dealer_wholesale)],
                  ["Service Forms", @service.sum(:dealer_wholesale)],
                  ["Completed Forms", @completed.sum(:dealer_wholesale)]],
                  colors: ['#F0AD4E'],
                  library: {title: 'Wholesale Total',
                            hAxis: {title: "Category"},
                            vAxis: {title: "Total Dollars ($)"}} %>
