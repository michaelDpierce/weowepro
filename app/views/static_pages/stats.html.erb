<div ng-app="weowepro">
  <script src="//mgcrea.github.io/angular-strap/dist/angular-strap.tpl.js" data-semver="v2.0.1"></script>

  <div ng-controller="TimepickerDemoCtrl">
    <% provide(:title, 'Statistics') %>
    <h1 class='hidden-xs'>Statistics</h1>
    <center><h3 class='visible-xs'>Statistics</h3></center>
    <div class='row'>
      <div class='col-md-6 well'>
        <h4> Parameters </h4>
          <div class="form-group">
            <label class="control-label"><i class="fa fa-calendar"></i> Start Date</label><br>
            <div class="form-group">
              <input type="text" size="10" class="form-control" ng-model="sharedDate" data-autoclose="1" placeholder="Date" bs-datepicker>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label"><i class="fa fa-calendar"></i> End Date</label><br>
            <div class="form-group">
              <input type="text" size="10" class="form-control" ng-model="sharedDate2" data-autoclose="1" placeholder="Date" bs-datepicker>
            </div>
          </div>
        <br>
        <%= bootstrap_form_tag(url: '/stats', method: "post") do |f| %>
          <%= f.hidden_field :start_date, value: "{{sharedDate | date:'yyyy-MM-dd'}}" %>
          <%= f.hidden_field :end_date, value: "{{sharedDate2 | date:'yyyy-MM-dd'}}" %>
          <%= f.primary 'Query Database' %>
        <% end %>
      </div>
      <div class='col-md-6'><%= render 'stats_table' %></div>
    </div>
   </div>
 </div>
</div>
