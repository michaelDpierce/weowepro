<div ng-app='weowepro' class='table-responsive'>
  <table ng-controller='UsersCtrl'
    class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th>
         <a href="" ng-click="predicate.value = 'last_name'; reverse=!reverse">
           Last Name</a>
        </th>
        <th class = 'hidden-xs'>
         <a href="" ng-click="predicate.value = 'first_name'; reverse=!reverse">
           First Name </a>
        </th>
        <th class = 'hidden-xs'>
         <a href="" ng-click="predicate.value = 'email'; reverse=!reverse">
           Email</a>
        </th>
        <th>
         <a href="" ng-click="predicate.value = 'phone_number'; reverse=!reverse">
           Phone Number</a>
        </th>
        <th class = 'hidden-xs'>
         <a href="" ng-click="predicate.value = 'active'; reverse=!reverse">
           Department</a>
        </th>
        <th class = 'hidden-xs'>
         <a href="" ng-click="predicate.value = 'active'; reverse=!reverse">
           Active</a>
        </th>
        <th class = 'hidden-xs'>
         <a href="" ng-click="predicate.value = 'department'; reverse=!reverse">
           Admin</a>
        </th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='user in weoweUsers | orderBy:predicate.value:reverse |
                     filter:search'>
        <td>
          <a ng-href='/users/{{user.id}}'>
            {{user.last_name}}
          </a>
        </td>
        <td class='hidden-xs'>{{user.first_name}}</td>
        <td class='hidden-xs'><%= mail_to '{{user.email}}' %></td>
        <td><a ng-href='tel:{{user.phone_number}}'>{{user.phone_number}}</td>
        <td class='hidden-xs'>{{user.department}}</td>
        <td class='hidden-xs'>{{user.active | booleanToWords}}</td>
        <td class='hidden-xs'>{{user.admin | booleanToWords}}</td>
      </tr>
    </tbody>
  </table>
</div>
