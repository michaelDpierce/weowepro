<div ng-app='weowepro'>
  <div ng-controller='ClosedFormsCtrl'>
    <% provide(:title, 'Closed') %>
    <h1>Closed Forms</h1>

    <div class='row'>
      <div class='col-md-3'>
        <div class="input-group">
          <input class="form-control" ng-model="search" placeholder="Search"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-5'></div>
      <div class='col-md-4'>
      <div class='btn-group'>
        <%= link_to 'Add Form', new_weowe_form_path,
          class: 'btn btn-primary btn-sm', role: 'button' %>
        <%= link_to 'Open Forms', weowe_forms_path,
          class: 'btn btn-success btn-sm', role: 'button' %>
        <%= link_to 'Closed Forms', closed_path,
          class: 'btn btn-danger btn-sm', role: 'button' %>
      </div>
    </div>
    <br><br><br>
    <%= render 'closed' %>
  </div>
</div>

