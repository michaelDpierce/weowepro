<div data-ng-app='weowepro'>
  <div data-ng-controller='WeoweFormsCtrl'>
    <% provide(:title, 'Service') %>
    <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)">{{alert.msg}}</alert>
    <h1>Service</h1>
    <div class='row'>
      <div class='col-md-3'>
        <div class="input-group">
          <input class="form-control" ng-model="search" placeholder="Search"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-5'></div>
      <div class='col-md-4'>
      <div class='btn-group'>
        <%= link_to 'Add Form', new_weowe_form_path,
          class: 'btn btn-primary btn-sm', role: 'button' %>
        <%= link_to 'Sales', pending_path,
          class: 'btn btn-warning btn-sm', role: 'button' %>
        <%= link_to 'Completed', completed_path,
          class: 'btn btn-danger btn-sm', role: 'button' %>
      </div>
    </div>
    <br><br><br>
    <%= render 'index' %>
    <div class='well'>
      <center>
        <btn class="btn btn-default" ng-click="loadMore()">Load Additional Records</btn>
        <br>
        <div class='btn-group'>
          <%= link_to 'Add Form', new_weowe_form_path,
            class: 'btn btn-primary', role: 'button' %>
          <%= link_to 'Sales', pending_path,
            class: 'btn btn-warning', role: 'button' %>
          <%= link_to 'Completed', completed_path,
            class: 'btn btn-danger', role: 'button' %>
        </div>
      </center>
    </div>
</div>

