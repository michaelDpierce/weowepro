<div ng-app='weowepro'>
  <div ng-controller='WeoweFormsCtrl'>
    <div class='userform well'>
      <form name="newWeoweForm">
        <div ng-init='current_user = <%= current_user.to_json %>'>

        <h3><center>New We Owe Form</center></h3>

        <center><h4>Admin</h4></center>

        <label>Assigned Sales Person<span style='color: red'> *</span></label>
        <div class='input-group'>
          <input type='text'
                 ng-model='current_user'
                 typeahead="user as user.last_name + ', ' + user.first_name for user in ::salesStaff
                           | filter:$viewValue
                           | limitTo:8"
                 placeholder='Assign Sales Person'
                 class='form-control'>
          <span class='input-group-addon'>
            <i ng-click="current_user = ''" class="fa fa-times fa-lg"> Clear Name</i>
          </span>
        </div>

        <center><h4>Customer Information</h4></center>

        <label>First Name (Optional)</label>
        <input ng-model='data.newWeoweForm.customer_first_name'
               type='text' class='form-control' placeholder='First Name (Optional)'>
        <label>Last Name / Company<span style='color: red'> *</span></label>
        <input ng-model='data.newWeoweForm.customer_last_name'
               type='text'
               name='customer_last_name'
               class='form-control'
               placeholder='Last Name / Company'
               required />
        <p ng-show='newWeoweForm.customer_last_name.$dirty && newWeoweForm.customer_last_name.$invalid'
           class='help-block' style='color: red'>
           Please enter a Customer Last Name or Company Name.
        </p>
        <label>Phone Number</label>
        <input ng-model='data.newWeoweForm.customer_phone_mobile'
               type='text' class='form-control' placeholder='Phone Number ###-###-####'>
        <label>Email</label>
        <input ng-model='data.newWeoweForm.customer_email'
               type='email' class='form-control' placeholder='Email'>

        <center><h4>Vehicle Information</h4></center>
        <label>Stock Number<span style='color: red'> *</span></label>
        <input ng-model='data.newWeoweForm.stock_number'
               type='text'
               name='stock_number'
               class='form-control'
               placeholder='Stock Number'
               required />
        <p ng-show='newWeoweForm.stock_number.$dirty && newWeoweForm.stock_number.$invalid'
           class='help-block' style='color: red'>
           Please enter a Stock Number.
        </p>
        <label>Year<span style='color: red'> *</span></label>
        <div class='form-group'>
          <select class='form-control' ng-model='data.newWeoweForm.year' ng-options='year for year in years'>
          </select>
        </div>
        <label>Make<span style='color: red'> *</span></label>
        <input ng-model='data.newWeoweForm.make'
               type='text'
               name='make'
               class='form-control'
               placeholder='Make'
               required />
        <p ng-show='newWeoweForm.make.$dirty && newWeoweForm.make.$invalid'
           class='help-block' style='color: red'>
           Please enter a Make.
        </p>
        <label>Model<span style='color: red'> *</span></label>
        <input ng-model='data.newWeoweForm.vehicle_model'
               type='text'
               name='vehicle_model'
               class='form-control'
               placeholder='Model'
               required />
        <p ng-show='newWeoweForm.vehicle_model.$dirty && newWeoweForm.vehicle_model.$invalid'
           class='help-block' style='color: red'>
           Please enter a Model.
        </p>

        <label>Date Sold<span style='color: red'> *</span></label>
        <center>
          <div style='display:inline-block; min-height:290px;'>
            <datepicker ng-model='dateSold' class='well well-sm'></datepicker>
          </div>
        </center>

        <center><h4>We Owe</h4></center>

        <div class='row'>
          <div class='col-md-9'>
            <label>Description #1</label>
            <input ng-model='data.newWeoweForm.description_1'
                       type='text' class='form-control' placeholder='Item #1 (Max 300 Characters)'>
          </div>
          <div class='col-md-3'>
            <label>Quantity #1</label>
              <input ng-model='data.newWeoweForm.quantity_1'
                         type='text' class='form-control' placeholder='Qty #1'>
          </div>
          <div class='col-md-6'>
            <label>Retail #1</label>
            <div class='input-group'>
              <span class='input-group-addon'>$</span>
              <input ng-model='data.newWeoweForm.dealer_total_value_1'
                     type='text' class='form-control' placeholder='Retail #1'>
            </div>
          </div>
          <div class='col-md-6'>
            <label>Wholesale #1</label>
            <div class='input-group'>
              <span class='input-group-addon'>$</span>
              <input ng-model='data.newWeoweForm.dealer_wholesale_1'
                     type='text' class='form-control' placeholder='Wholesale #1'>
            </div>
          </div>
        </div>
        <hr>
        <div class='row'>
          <div class='col-md-9'>
            <label>Description #2</label>
            <input ng-model='data.newWeoweForm.description_2'
                       type='text' class='form-control' placeholder='Item #2 (Max 300 Characters)'>
          </div>
          <div class='col-md-3'>
            <label>Quantity #2</label>
