<div style='float:left; width:100%'>
  <table class='table table-bordered table-condensed' style='text-align: center;'>
    <% if @weowe_form.pending == true && @weowe_form.completed == false %>
      <td class='danger'> Sales </td>
      <% elsif @weowe_form.pending == false && @weowe_form.completed == false %>
        <td class='warning'>Service</td>
      <% else %>
        <td class='success'>Completed</td>
    <% end %>
  </table>
</div>

<div class='pull-right'>
  <% if current_user.admin? %>
    <% if @weowe_form.pending == true && @weowe_form.completed == false %>
      <%= bootstrap_form_for @weowe_form do |f| %>
        <%= f.hidden_field :pending, value: false %>
        <%= f.hidden_field :completed, value: false %>
        <%= f.hidden_field :approved_by,
                           value: "#{current_user.first_name}
                                   #{current_user.last_name} on
                                   #{Time.now.asctime}" %>
        <button type='submit' class='btn btnfix btn-success btn-sm'>
          <i class='fa fa-check fa-lg'></i> Approve
        </button>
      <% end %>
    <% end %>
  <% end %>

  <% if current_user.admin? || current_user.department == 'Service' %>
    <% if @weowe_form.pending == false && @weowe_form.completed == false %>
      <%= bootstrap_form_for @weowe_form do |f| %>
        <%= f.hidden_field :completed, value: true %>
        <%= f.hidden_field :pending, value: false %>
        <%= f.hidden_field :completed_by,
                           value: "#{current_user.first_name}
                                   #{current_user.last_name} on
                                   #{Time.now.asctime}" %>
        <button type='submit' class='btn btnfix btn-success btn-sm'>
          <i class='fa fa-check-square fa-lg'></i> Complete
        </button>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class='pull-left'>
  <% if current_user.admin? %>
    <% if @weowe_form.pending == false && @weowe_form.completed == false %>
      <%= bootstrap_form_for @weowe_form do |f| %>
        <%= f.hidden_field :pending, value: true %>
        <%= f.hidden_field :completed, value: false %>
        <%= f.hidden_field :approved_by, value: '' %>
        <button type='submit' class='btn btnfix btn-danger btn-sm'>
          <i class='fa fa-user fa-lg'></i> Return to Sales
        </button>
      <% end %>
    <% end %>
    <% if @weowe_form.pending == false && @weowe_form.completed == true %>
      <%= bootstrap_form_for @weowe_form do |f| %>
        <%= f.hidden_field :completed, value: false %>
        <%= f.hidden_field :pending, value: false %>
        <%= f.hidden_field :completed_by, value: '' %>
        <button type='submit' class='btn btnfix btn-warning btn-sm'>
          <i class='fa fa-wrench fa-lg'></i> Return to Service
        </button>
      <% end %>
    <% end %>
  <% end %>
</div>
<br>
