<div class='pull-right'>
  <div style="font-size: 16pt"><%= @weowe_form.dealer.name %></div>
    <%= "#{@weowe_form.dealer.address_1} #{@weowe_form.dealer.address_2}" %> <br />
    <%= "#{@weowe_form.dealer.city}, #{@weowe_form.dealer.state}, #{@weowe_form.dealer.zip}" %> <br />
    <%= "#{@weowe_form.dealer.phone_number}" %> <br />
  </div>

<div class='pull-left'>
  <% if @weowe_form.dealer.logo? %>
    <%= image_tag @weowe_form.dealer.logo.url, width: '350px' %>
  <% end %>
</div>

<br><br><br><br><br>

<center style="font-size: 40pt">DUE BILL</center>

<center style="font-size: 14pt"> VOID 30 DAYS AFTER SALE</center>

<table class='table table-bordered table-condensed' >
  <tr>
    <td>DATE: <%= Time.now.strftime('%-m/%-d/%Y')%></td>
    <td colspan="2">
      SALES MANAGER: <%= "#{User.find(@weowe_form.user_id).first_name}
                        #{User.find(@weowe_form.user_id).last_name}" %>
    </td>
  </tr>
  <tr>
    <td colspan='5'>
      <%= "CUSTOMER INFORMATION: #{@weowe_form.customer_first_name}
          #{@weowe_form.customer_last_name},
          #{@weowe_form.customer_phone_mobile},
          #{@weowe_form.customer_email}"%>
    </td>
  </tr>
  <tr>
    <td colspan='5'>
      <%= "VEHICLE INFORMATION:
          #{@weowe_form.make},
          #{@weowe_form.vehicle_model},
          #{@weowe_form.year};
          STOCK #: #{@weowe_form.stock_number}" %>
    </td>
  </tr>
</table>

<center style='font-size: 14pt'><%= "#{@weowe_form.dealer.name} OWES".upcase %></center>
  <table class='table table-bordered table-condensed' >
    <tr><th>#</th><th>Description</th><th>Quantity</th><th>Total Cost </th></tr>
      <% if @weowe_form.description_1? %>
        <tr>
          <th style='width:25%'>1</th>
          <td><%= @weowe_form.description_1 %></td>
          <td><%= @weowe_form.quantity_1 %></td>
          <td><%= number_to_currency(@weowe_form.dealer_total_value_1) %></td>
        </tr>
      <% end %>
      <% if @weowe_form.description_2? %>
        <tr>
          <th>2</th>
          <td><%= @weowe_form.description_2 %></td>
          <td><%= @weowe_form.quantity_2 %></td>
          <td><%= number_to_currency(@weowe_form.dealer_total_value_2) %></td>
        </tr>
      <% end %>
      <% if @weowe_form.description_3? %>
        <tr>
          <th>3</th>
          <td><%= @weowe_form.description_3 %></td>
          <td><%= @weowe_form.quantity_3 %></td>
          <td><%= number_to_currency(@weowe_form.dealer_total_value_3) %></td>
        </tr>
      <% end %>
      <% if @weowe_form.description_4? %>
        <tr>
          <th>4</th>
          <td><%= @weowe_form.description_4 %></td>
          <td><%= @weowe_form.quantity_4 %></td>
          <td><%= number_to_currency(@weowe_form.dealer_total_value_4) %></td>
        </tr>
      <% end %>
      <% if @weowe_form.description_5? %>
        <tr>
          <th>5</th>
          <td><%= @weowe_form.description_5 %></td>
          <td><%= @weowe_form.quantity_5 %></td>
          <td><%= number_to_currency(@weowe_form.dealer_total_value_5) %></td>
        </tr>
      <% end %>
       <tr class='success'>
        <th>Totals</th>
        <td>N/A</td>
        <td>
          <%= @weowe_form.dealer_total_value %>
        </td>
        <td>
          <%= number_to_currency(@weowe_form.dealer_total_value) %>
        </td>
      </tr>
  </table>

<% if @weowe_form.theyowe_info? %>
  <center style="font-size: 14pt">CUSTOMER OWES</center>
  <table class='table table-bordered table-condensed' >
    <tr><th>#</th><th>Description</th><th>Quantity</th><th>Total Cost </th></tr>
            <tr>
              <td> 1. </td>
              <td><%= @weowe_form.theyowe_info %></td>
              <td> 1 </td>
              <td><%= number_to_currency(@weowe_form.customer_total_value) %></td>
            </tr>
    </table>
  <br>
<% end %>

<div style='font-size: 8pt'>
  NOTE: THE ABOVE PROMISED WORK IS ONLY WORK TO BE PERFORMED FREE OF CHARGE OR INCLUDED
  IN NEGOTIATED PRICE. ANY ADDITIONAL WORK WILL BE CHARGED FOR IN ACCORDANCE WITH THE TYPE OF WARRENTY
  ISSUED AT TIME OF SALE, AND WILL BE CASH ON DELIVERY. ALL WORK MUST BE DONE IN OUR SHOP,
  AND YOU MUST MAKE AN ADVANCE APPOINTMENT WITH THE SERVICE DEPARTMENT BEFORE THE ABOVE WORK
  CAN BE PERFORMED.
</div>
<br>
<table class='table table-bordered table-condensed' >
  <tr>
    <th>Sales Person</th>
    <td>
      <% if @weowe_form.assigned_sales_person_id.exists? %>
        <%= "#{User.find(@weowe_form.assigned_sales_person_id).last_name},
             #{User.find(@weowe_form.assigned_sales_person_id).first_name}"%>
      <% end %>
    </td>
  </tr>
</table>
<br>
<br>

